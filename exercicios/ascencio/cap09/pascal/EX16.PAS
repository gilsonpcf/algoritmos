PROGRAM EX16;
USES CRT;
VAR PALAVRA1:STRING;
    TAM, I, J, ACHOU: INTEGER;
BEGIN
CLRSCR;
WRITELN('DIGITE A PALAVRA');
READLN(PALAVRA1);
TAM:=LENGTH(PALAVRA1);
J:=TAM;
ACHOU:=0;
FOR I:=1 TO TAM DO
BEGIN
     IF (PALAVRA1[I] <> PALAVRA1[J])
     THEN ACHOU:=1;
     J:=J-1;
END;
IF ACHOU = 0
THEN WRITELN(PALAVRA1,' ê PALINDROME')
ELSE WRITELN(PALAVRA1,' NAO ê PALINDROME');
READLN;
END.