PROGRAM EXEMPLO20;
USES CRT;
VAR C:STRING;
    I, ERRO: INTEGER;
BEGIN
CLRSCR;
WRITE('DIGITE UM CARACTERE: ');
READLN(C);
{A funáao VAL converte uma string para um valor inteiro}
VAL(C,I,ERRO);
IF ERRO <> 0
THEN WRITELN('OCORREU ALGUM PROBLEMA')
ELSE WRITELN('CARACTERE CONVERTIDO PARA NUMêRICO = ',I);
READLN;
END.











