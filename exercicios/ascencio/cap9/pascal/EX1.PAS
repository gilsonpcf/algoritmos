PROGRAM EX1;
USES CRT;
VAR FRASE: STRING;
    QTDE, TAM, I: INTEGER;
BEGIN
CLRSCR;
WRITELN('DIGITE UMA FRASE');
READLN(FRASE);
TAM := LENGTH(FRASE);
QTDE := 0;
FOR I:=1 TO TAM DO
BEGIN
 IF (FRASE[I] = 'A') OR (FRASE[I] = 'E')
 OR (FRASE[I] = 'I') OR (FRASE[I] = 'O')
 OR (FRASE[I] = 'U') OR (FRASE[I] = 'a')
 OR (FRASE[I] = 'e') OR (FRASE[I] = 'i')
 OR (FRASE[I] = 'o') OR (FRASE[I] = 'u')
 THEN QTDE := QTDE + 1;
END;
WRITELN('QUANTIDADE DE VOGAIS = ',QTDE);
READLN;
END.
