PROGRAM EXEMPLO15;
USES CRT;
VAR C1,C2:CHAR;
BEGIN
CLRSCR;
WRITE('DIGITE UM CARACTERE: ');
READLN(C1);
{O COMANDO PRED RETORNA O CARACTERE ANTECESSOR OU PREDECESSOR
 DO CARACTERE DIGITADO, NA TABELA ASCII}
C2:=PRED(C1);
WRITELN('O CARACTERE ',C2,' ê O ANTECESSOR OU PREDECESSOR DO CARACTERE ',C1,' NA TABELA ASCII');
READLN;
END.







